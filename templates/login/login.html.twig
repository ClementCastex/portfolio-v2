{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<h1>Connexion</h1>

{% if error %}
    <div class="alert alert-danger">Nom d'utilisateur ou mot de passe incorrect</div>
{% endif %}

<form method="post">
    <div>
        <label for="username">Adresse email</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus>
    </div>

    <div>
        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="_password" required>
    </div>

    <button type="submit">Se connecter</button>
</form>

<p>Pas encore inscrit ? <a href="{{ path('app_register') }}">Cr√©er un compte</a></p>
{% endblock %}
